@model List<EntityPersona.EntPersona>
@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>
@if (TempData["resu"] != null)
{
    <h6 class="alert alert-success">@TempData["resu"]</h6>
}
@if (TempData["error"] != null)
{
    <h6 class="alert alert-danger">@TempData["error"]</h6>
}
<form action="/" method="post">
    <table class="table">
        <tr>
            <td><input type="text" name="valor" value="" placeholder="Buscar Registro" class="form-control" /></td>
            <td><input type="submit" name="name" value="Buscar" formaction="/Home/BuscarRegistro" class="btn btn-outline-success btn-block" /></td>
        </tr>
    </table>
</form>
<hr />
<a href="/Home/Agregar" class="btn btn-outline-success">Agregar</a>
<table class="table">
    <tr>
        <th>Nombre</th>
        <th>Paterno</th>
        <th>Materno</th>
        <th>Edad</th>
        <th>Fecha Registro</th>
        <th>Estado Civil</th>
        <th>Editar</th>
        <th>Eliminar</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr title="@item.Id">
            <td>@item.Nombre</td>
            <td>@item.Paterno</td>
            <td>@item.Materno</td>
            <td>@item.Edad</td>
            <td>@item.FechaRegistro</td>
            <td>@item.EntEstadoCivil.NombreEC</td>
            @*<td><input type="submit" name="name" value="Editar" formaction="/Home/FormEditar/@item.Id" class="btn btn-success" /></td>*@
            <td><a href="/Home/FormEditar/@item.Id" class="btn btn-success" onclick="return confirm('Editar Registro');">Editar</a></td>
            <td><a href="/Home/Eliminar/@item.Id" class="btn btn-danger" onclick="return confirm('Eliminar Registro');">Eliminar</a></td>
        </tr>
    }
</table>

