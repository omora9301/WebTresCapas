
@{
    ViewBag.Title = "Agregar";
}

<h2>Agregar</h2>
@if (TempData["resu"] != null)
{
    <h5 class="alert alert-success">@TempData["resu"]</h5>
}
@if (TempData["error"] != null)
{
    <h5 class="alert alert-danger">@TempData["error"]</h5>
}
<form action="/" method="post">
    <table>
        <tr>
            <td><input type="text" name="nombre" value="" placeholder="Nombre" class="form-control"/></td>
        </tr>
        <tr>
            <td><input type="text" name="paterno" value="" placeholder="A. Paterno" class="form-control"/></td>
        </tr>
        <tr>
            <td><input type="text" name="materno" value="" placeholder="A.Materno" class="form-control"/></td>
        </tr>
        <tr>
            <td><input type="number" name="edad" value="" placeholder="Edad" class="form-control" /></td>
        </tr>
        <tr>
            <td>@Html.DropDownList("EstadoCivil", null, "Seleccionar", new { @class = "form-control" })</td>
        </tr>
        <tr>
            <td><input type="submit" name="name" value="Agregar" formaction="/Home/AgregarPost" class="btn btn-success" /></td>
        </tr>
    </table>

</form>

